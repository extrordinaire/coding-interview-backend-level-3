{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "noEmit": true
  },
  "include": [
    "src/**/*", 
    "tests/**/*", 
    "src/types/**/*.d.ts"
  ],
  "exclude": ["./dist/**/*"]
}
